[Unit]
Description=Acto ray cluster
Requires=network.target
After=syslog.target network.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'source {{ user_home }}/.profile && nix-shell --run "ray start --address={{ groups['all'][0] }}:6379 && tail -f /dev/null"'
ExecStop=/bin/bash -c 'source {{ user_home }}/.profile && nix-shell --run "ray stop"'
User={{ ansible_user }}
WorkingDirectory={{ user_home }}/acto

[Install]
WantedBy=multi-user.target